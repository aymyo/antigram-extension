{
  "manifest_version": 3,
  "name": "Antigram - Explore Blocker",
  "description": "Browser extension to fight back Instagram's addictive features.",
  "version": "1.1.0",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage"],

  "action": {
    "default_title": "Click to open Antigram settings",
    "default_popup": "index.html",
    "default_icon": {
      "16": "app/images/ag16.png",
      "32": "app/images/ag32.png",
      "48": "app/images/ag48.png",
      "128": "app/images/ag128.png"
    }
  },

  "icons": {
    "16": "app/images/ag16.png",
    "32": "app/images/ag32.png",
    "48": "app/images/ag48.png",
    "128": "app/images/ag128.png"
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://www.instagram.com/*"]
    }
  ],

  "options_page": "index.html"
}
