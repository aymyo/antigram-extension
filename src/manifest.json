{
  "name": "Antigram - Explore Blocker",
  "version": "1.0.5",
  "description": "Browser extension to fight back Instagram's addictive features.",
  "page_action": {
    "default_title": "Antigram Web",
    "default_icon": {
      "16": "images/ag16.png",
      "32": "images/ag32.png",
      "48": "images/ag48.png",
      "128": "images/ag128.png"
    }
  },
  "icons": {
    "16": "images/ag16.png",
    "32": "images/ag32.png",
    "48": "images/ag48.png",
    "128": "images/ag128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "css": ["styles/styles.css"],
      "js": ["app/content.js"],
      "matches": ["*://www.instagram.com/*"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["app/background.js"],
    "persistent": false
  },
  "options_page": "app/options.html",
  "manifest_version": 2
}
