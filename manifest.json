{
    "name": "Antigram - Explore Blocker",
    "version": "1.0.1",
    "description": "Antigram is a browser extension that gives the user tools to fight back Instagram's features designed to be addictive.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
      "default_title": "Antigram Web",
      "default_icon": {
          "16": "images/ag16.png",
          "32": "images/ag32.png",
          "48": "images/ag48.png",
          "128": "images/ag128.png"
        }
    },
    "icons": {
        "16": "images/ag16.png",
        "32": "images/ag32.png",
        "48": "images/ag48.png",
        "128": "images/ag128.png"
      },
    "permissions": [
      "storage"
    ],
    "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["*://www.instagram.com/*"],
        "run_at":  "document_idle"
      }],
    "options_page": "options.html",
    "manifest_version": 2
  }